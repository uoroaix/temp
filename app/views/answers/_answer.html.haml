
.well{id: dom_id(answer)}
  .row
    %p= answer.body
    %p Created on #{formatted_date(answer.created_at)}
    .pull-right= button_to "Delete", question_answer_path(@question, answer), method: :delete, class: "btn btn-codecore", data: {confirm: "Are you sure you want to delete this?"}, remote: true
    = link_to "Remove", "javascript:void(0);", class: "btn btn-codecore remove-button"
    = link_to "Test Me", "javascript:void(0);", class: "btn btn-primary test-button"